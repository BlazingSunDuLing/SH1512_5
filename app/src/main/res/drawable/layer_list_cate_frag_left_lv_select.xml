<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/colorRed" android:dashWidth="5dp" android:width="5dp"/>
            <solid android:color="@color/colorWhite"/>
        </shape>
    </item>
    <item android:left="5dp">
        <shape android:shape="rectangle">
            <stroke android:color="@color/colorWhite" android:width="3dp" android:dashWidth="5dp"/>
            <solid android:color="@color/colorWhite"/>
        </shape>
    </item>
</layer-list>