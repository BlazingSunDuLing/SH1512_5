<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.sh1512_5.Activity.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorRed"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/searchBackIV"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@mipmap/abc_ic_commit_search_api_holo_dark"/>

        <com.example.administrator.sh1512_5.MyView.MySearch
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="8"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            />
    </LinearLayout>
</RelativeLayout>
