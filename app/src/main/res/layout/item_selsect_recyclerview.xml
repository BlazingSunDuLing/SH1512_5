<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <ImageView
            android:id="@+id/grid_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/grid_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_iv"
            android:layout_margin="10dp"
            android:text="name"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/grid_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/grid_tv_name"
            android:text="price"
            android:textColor="#f00"/>

        <TextView

            android:id="@+id/grid_tv_favoritesr"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/grid_tv_price"
            android:layout_alignRight="@+id/image"
            android:layout_marginBottom="10dp"
            android:text="favorites"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/grid_tv_favoritesr"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"
            android:src="@mipmap/ic_small_heart_normal"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>