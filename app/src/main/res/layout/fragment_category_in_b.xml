<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.sh1512_5.Fragment.CategoryInBFragment">


    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/CateInFragBTvSelect"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:drawableLeft="@mipmap/gift_category_guide"
        android:drawableRight="@mipmap/arrow_right"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/selectGift"
        android:textSize="10sp" />
    <!--这是一条线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/colorGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/CateInFragBLvLeft"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:divider="@null"
            android:listSelector="@color/colorWhite"/>
            <!--android:listSelector="@drawable/layer_list_cate_frag_left_lv_select"-->
        <ListView
            android:id="@+id/CateInFragBLvRight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:choiceMode="singleChoice"/>
    </LinearLayout>
</LinearLayout>